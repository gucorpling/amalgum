<segment id="1" parent="1001" relname="preparation">IOC visits Madrid as part of 2020 Olympic bid process</segment>
<segment id="2" parent="1002" relname="preparation">Tuesday , March 19 , 2013</segment>
<segment id="3" parent="4" relname="preparation">File :</segment>
<segment id="4" parent="1003" relname="span">Merchandising Madrid2020 . JPG</segment>
<segment id="5" parent="1007" relname="span">Merchandising for the Madrid 2020 bidImage :</segment>
<segment id="6" parent="5" relname="elaboration">Donperfectodewiki .</segment>
<segment id="7" parent="8" relname="preparation">( Image missing from commons :</segment>
<segment id="8" parent="1010" relname="span">image ;</segment>
