<segment id="40" parent="1040" relname="preparation">See</segment>
<segment id="41" parent="1040" relname="joint">Ashdown Forest .</segment>
<segment id="42" parent="1040" relname="joint">Walking , wildlife and Winnie The Pooh .</segment>
