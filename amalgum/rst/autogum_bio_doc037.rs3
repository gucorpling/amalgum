<segment id="72" parent="1071" relname="evidence">[ 16 ]</segment>
<segment id="73" parent="1073" relname="span">Fellow , IEEE</segment>
<segment id="74" parent="73" relname="evidence">[ 17 ]</segment>
<segment id="75" parent="1075" relname="span">IEEE Pioneer Award in Nanotechnology</segment>
<segment id="76" parent="1079" relname="joint">[ 18 ]</segment>
<segment id="77" parent="1080" relname="joint">[ 19 ]</segment>
