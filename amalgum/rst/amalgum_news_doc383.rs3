<segment id="1" parent="1001" relname="preparation">IOC visits Madrid as part of 2020</segment>
<segment id="2" parent="1002" relname="preparation">Olympic bid process</segment>
<segment id="3" parent="1003" relname="preparation">Tuesday , March 19 , 2013</segment>
<segment id="4" parent="1004" relname="span">File :</segment>
<segment id="5" parent="4" relname="elaboration">Merchandising Madrid2020 .</segment>
<segment id="6" parent="1007" relname="span">JPG</segment>
<segment id="7" parent="1008" relname="span">Merchandising for the Madrid 2020 bidImage :</segment>
<segment id="8" parent="7" relname="elaboration">Donperfectodewiki .</segment>
<segment id="9" parent="10" relname="preparation">( Image missing from commons :</segment>
<segment id="10" parent="1010" relname="span">image ;</segment>
